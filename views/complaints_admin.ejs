<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaints</title>
    <link rel="icon" href="/images/logo.jpg">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            border: none;
            outline: none;
            font-family: "Poppins", sans-serif;
        }
        .active {
  background-color: #6759ff;
  color: #ffffff;
}
        .card {
            background-color: #ffffff;
            display: flex; /* Use flexbox to layout children */
    border: 1px solid #ccc;
    margin-bottom: 10px;
            width: 1000px;
            height: 150px;
            margin-top: 3em;
            margin-left: 230px;
            margin-bottom: 20px;
            padding: 1em;
            border-radius: 5px;
            box-shadow: 1em 2em 2.5em rgba(1, 2, 68, 0.08);
        }
        .search-container {
        text-align: center;
        margin-top: 20px;
    }
    .search-bar {
        padding: 5px;
        width: 200px;
        margin: 30px;
        border: 1px solid black;
    }
        .container {
            flex: 1; 
    padding: 10px;
            color: #110f29;
            margin-top: 20px;        }
        .container h5 {
            font-weight: 500;
        }
        @media screen and (max-width: 720px) {
            img {
                max-width: 100%;
                object-fit: contain;
                height: 10em;
            }
            .card {
                max-width: 10em;
                margin-top: 1em;
            }
            #products {
                grid-template-columns: auto auto;
                grid-column-gap: 1em;
            }
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        .navbar {
            background-color: #20a3c7;
            color: #fff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo img {
            margin-right: 10px;
        }
        .nav-options {
            display: flex;
            align-items: center;
        }
        .nav-options a {
            margin-left: 20px;
            text-decoration: none;
            color: #fff;
            font-size: 16px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }
        .nav-options a:hover {
            color: #4a90e2;
        }
        .main-heading {
            text-align: center;
            font-size: 48px;
            margin-top: 50px;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
        #content {
            margin-left: 25%;
            width: 75%;
            padding: 20px;
        }
        .hide{
            display: none;
        }
    </style>
</head>
<body></body>
    <div class="navbar">
        <div class="logo">
            <a href="/adminlogin"><img class="img" src="/images/logo.jpg" alt="Bookify Logo" height="50px" width="150px"></a>
        </div>
        <div class="nav-options">
            <a href="/admin/dashboard">Home</a>
        </div>
    </div>
    <div class="main-heading">Complaints</div>
    <div class="search-container">
        <input type="text" class="search-bar" id="search-input" placeholder="Search for vehicle..">
        <button style="cursor: pointer; background-color: green; color: white; width: 60px; height: 35px;" class="search-button" id="search-button" onclick="search()">Search</button>    </div>
    <div id="products">
        <% data.forEach((x)=>{ %>
            <div class="card">
                <div class="container" style="display: inline flex;">
                    <span>
                        <h3><%=x.username%></h3> <br>
                        <h3 class="product-name"><%=x.vehiclename%></h3>
                        </span>
                    <span style="margin-left: 80px;">
                        <h3><b>complaint:
                            <span style="margin-left: 480px;">
                                <button style="cursor: pointer;" onclick="window.location.href='/deletecomplaint/<%=x.username%>/<%=x.complaint%>'"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
                                    <path fill="red" d="M21,7H19V6A3,3,0,0,0,15,3H9A3,3,0,0,0,5,6V7H3a1,1,0,0,0,0,2H4v9a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V9h1a1,1,0,0,0,0-2ZM9,6a1,1,0,0,1,1-1h4a1,1,0,0,1,1,1V7H9ZM18,18a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V9H18ZM20,8H4V6A1,1,0,0,1,5,5H19a1,1,0,0,1,1,1Z"/>
                                  </svg></button>
                            </span>
                        </b></h3>
                        <h3 ><%=x.complaint%></h1>
                        </span>
                    </div>
            </div>
            <%})%>
    </div>
    <script src="/js/userpage.js"></script>
    <script>
function search()
{
    let searchInput = document.getElementById("search-input").value;
  let elements = document.querySelectorAll(".product-name");
  let cards = document.querySelectorAll(".card");
  elements.forEach((element, index) => {
    if (element.innerText.includes(searchInput.toUpperCase() )) {
      cards[index].classList.remove("hide");
    } else {
      cards[index].classList.add("hide");
    }
  });
}
    </script>
</body>

</html>


